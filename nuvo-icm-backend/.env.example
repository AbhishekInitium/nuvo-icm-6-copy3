
# Server configuration
PORT=3000

# Database connection (replace with your MongoDB connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/your_database?retryWrites=true&w=majority

# Environment (development/production)
NODE_ENV=development

# The MongoDB URI above is just an example. You need to:
# 1. Replace 'username' and 'password' with your MongoDB credentials
# 2. Replace 'cluster.mongodb.net' with your MongoDB cluster address
# 3. Replace 'your_database' with your database name
